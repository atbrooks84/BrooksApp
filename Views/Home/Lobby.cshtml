
@{
    Layout = null;
}
@model BrooksApp.ViewModels.LobbyViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lobby</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/now-ui-dashboard.min.css" rel="stylesheet" />
</head>
<body>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("Create", "Household", FormMethod.Post, new { @class = "form-horizontal", role = "form"
            }))
            {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <h4>Create a new house</h4>
                @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
                @Html.LabelFor(m => m.Greeting, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Greeting, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-success" value="Create" />
                </div>
            </div>

            }

        </div>
        <div class="col-md-6">

            @using (Html.BeginForm("Join", "Household", FormMethod.Post, new { @class = "form-horizontal", role = "form" })){ 
            @Html.AntiForgeryToken()

            <div class="form-group">
                <h4>Join an existing house</h4>
                @Html.LabelFor(m => m.Code, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Code, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Join" />
                </div>
            </div>
            }
            
        </div>
    </div>
    
</body>
</html>
